[include]
    # ユーザー設定はバージョン管理外で管理
    path = ~/.gitconfig.local
[core]
    # エディター設定
    editor = vim
    # 全体的な無視ファイル設定
    excludesfile = ~/.gitconfig.ignore
    # 日本語ファイル有効化(Mac用)
    precomposeunicode = true
[color]
    # 全コマンドをカラー化
    ui = auto
[alias]
    # 基本設定
    co = checkout
    cob = checkout -b
    commita = commit -a
    commite = commit --allow-empty -m 'Initial Commit'
    commit-amend-now = commit --amend "`date`"
    cp = cherry-pick
    fetpr = fetch --prune
    pr = commit --allow-empty -m 'chore(git): make pull request [ci skip]'
    wip = commit -m '[ci skip]'
    wipa = commit -am '[ci skip]'
    ss = status -s
    ls = log --name-status
    br = branch
    brm = branch -m
    brd = branch -d
    brdf = branch -D
    pushf = push --force-with-lease
    pushe = push heroku master
    mergef = merge --ff
    mergefo = merge --ff-only
    ada = add --all
    adda = add --all
    # git diff のvimdiff版
    vimdiff = difftool --tool=vimdiff --no-prompt
    vdf     = difftool --tool=vimdiff --no-prompt
    # git log の木構造表示
    tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    # マージ済みのローカルブランチを削除する
    brdall = !git branch --merged | grep -v '*' | grep -v 'master' | grep -v 'develop' | xargs -I % git branch -d %
    # 管理内のファイル更新を無視する
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[a-z]"
[push]
    # push形式
    default = matching
[rebase]
	autosquash = true
[commit]
	template = ~/.gitmessage.local
	gpgsign = true
[tag]
	gpgsign = true
[gpg]
	format = ssh
[user]
	signingkey = ~/.ssh/id_rsa.pub
[init]
	defaultBranch = main
