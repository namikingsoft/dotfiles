[include]
    # ユーザー設定はバージョン管理外で管理
    path = ~/.gitconfig.local
[core]
    # エディター設定
    editor = vim
    # 全体的な無視ファイル設定
    excludesfile = ~/.gitconfig.ignore
    # 日本語ファイル有効化(Mac用)
    precomposeunicode = true
[color]
    # 全コマンドをカラー化
    ui = auto
[alias]
    # 基本設定
    co = checkout
    cob = checkout -b
    cm = commit
    commita = commit -a
    commite = commit --allow-empty
    pr = commit --allow-empty -m 'chore(git): make pull request'
    wip = commit -a -m "WIP"
    st = status
    ss = status -s
    ls = log --name-status
    br = branch
    brm = branch -m
    brd = branch -d
    brdf = branch -D
    pl = pull
    ps = push
    pushf = push --force-with-lease
    pushe = push heroku master
    mg = merge
    rs = rebase
    df = diff
    ad = add
    ada = add --all
    adda = add --all
    s  = svn
    # git diff のvimdiff版
    vimdiff = difftool --tool=vimdiff --no-prompt
    vdf     = difftool --tool=vimdiff --no-prompt
    # git log の木構造表示
    tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    # マージ済みのローカルブランチを削除する
    sweep = !git branch --merged | grep -v '*' | grep -v 'master' | grep -v 'develop' | xargs -I % git branch -d %
    # 管理内のファイル更新を無視する
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[a-z]"
[push]
    # push形式
    default = matching
