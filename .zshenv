# 日本語設定
export LANG=en_US.UTF-8
export KCODE=u # Ruby用

# エディタ設定
export EDITOR=vim

# ユーザー実行ファイル
PATH=$PATH:$HOME/bin
PATH=$PATH:$HOME/local/bin
export PATH

# ユーザーライブラリ
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME/local/lib
export LD_LIBRARY_PATH

# ユーザーズマニュアル
MANPATH=$MANPATH:$HOME/local/share/man
export MANPATH
